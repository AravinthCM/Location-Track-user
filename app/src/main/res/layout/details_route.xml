<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    android:background="@color/white"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgimg"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:src="@drawable/sreclogo1"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Bus 1"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textColor="@color/bbblack"
                android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Name"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="22dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_marginStart="77dp"
                android:id="@+id/leaveType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Name"
                android:textColor="@color/bbblack"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start destination"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="22dp"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/nameText"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="College"
                android:layout_marginStart="38dp"
                android:textColor="@color/bbblack"
                android:textSize="20dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End destination"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="22dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_marginStart="50dp"
                android:id="@+id/leaveReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Gandhipuram"
                android:textColor="@color/bbblack"
                android:textSize="20dp"/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>